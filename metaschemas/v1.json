{
  "$id": "https://json-unify.github.io/vocab-dataset/v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "A vocabulary for defining datasets using JSON and JSON Schema",
  "$vocabulary": {
    "https://json-schema.org/draft/2020-12/vocab/core": true,
    "https://json-schema.org/draft/2020-12/vocab/applicator": false,
    "https://json-schema.org/draft/2020-12/vocab/unevaluated": false,
    "https://json-schema.org/draft/2020-12/vocab/validation": false,
    "https://json-schema.org/draft/2020-12/vocab/meta-data": false,
    "https://json-schema.org/draft/2020-12/vocab/format-annotation": false,
    "https://json-schema.org/draft/2020-12/vocab/content": false,
    "https://json-unify.github.io/vocab-dataset/v1": true
  },
  "allOf": [
    { "$ref": "https://json-schema.org/draft/2020-12/schema" }
  ],
  "type": "object",
  "required": [ "dataset" ],
  "properties": {
    "dataset": {
      "type": "array",
      "$comment": "TODO: Can we validate the items against the instance?"
    },
    "datasetAuthors": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "datasetDocumentation": {
      "type": "string",
      "format": "uri"
    },
    "datasetLineage": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "additionalProperties": false,
            "required": [ "op", "value", "path" ],
            "properties": {
              "op": { "const": "add" },
              "value": true,
              "path": {
                "type": "string",
                "format": "json-pointer"
              }
            }
          },
          {
            "type": "object",
            "additionalProperties": false,
            "required": [ "op", "path" ],
            "properties": {
              "op": { "const": "remove" },
              "path": {
                "type": "string",
                "format": "json-pointer"
              }
            }
          },
          {
            "type": "object",
            "additionalProperties": false,
            "required": [ "op", "value", "path" ],
            "properties": {
              "op": { "const": "replace" },
              "value": true,
              "path": {
                "type": "string",
                "format": "json-pointer"
              }
            }
          },
          {
            "type": "object",
            "additionalProperties": false,
            "required": [ "op", "from", "path" ],
            "properties": {
              "op": { "const": "copy" },
              "from": {
                "type": "string",
                "format": "json-pointer"
              },
              "path": {
                "type": "string",
                "format": "json-pointer"
              }
            }
          },
          {
            "type": "object",
            "additionalProperties": false,
            "required": [ "op", "from", "path" ],
            "properties": {
              "op": { "const": "move" },
              "from": {
                "type": "string",
                "format": "json-pointer"
              },
              "path": {
                "type": "string",
                "format": "json-pointer"
              }
            }
          },
          {
            "type": "object",
            "additionalProperties": false,
            "required": [ "op", "value", "path" ],
            "properties": {
              "op": { "const": "test" },
              "value": true,
              "path": {
                "type": "string",
                "format": "json-pointer"
              }
            }
          }
        ]
      }
    }
  }
}
